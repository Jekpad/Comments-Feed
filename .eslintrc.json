{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "ignorePatterns": ["webpack.config.js"],
    "rules": {
        // "prettier/prettier": [
        //     "error",
        //     {
        //         "endOfLine": "auto"
        //     }
        // ],
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "eqeqeq": ["error", "always"],
        "max-len": ["error", { "code": 999 }]
    }
}
